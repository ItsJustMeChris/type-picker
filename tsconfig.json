{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2023"],
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["bun", "node"],
    "allowSyntheticDefaultImports": true
  },
  "include": ["src", "scripts", "*.ts"],
  "exclude": ["dist", "node_modules"]
}
